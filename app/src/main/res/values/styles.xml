<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">#FFFFFF</item>
    </style>

    <style name="title_s">
        <item name="android:text">@string/quiz</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="image_view_s">
        <item name="android:layout_width">@dimen/main_image_width</item>
        <item name="android:layout_height">@dimen/main_image_height</item>
        <item name="android:layout_marginTop">@dimen/top_margin_from_title</item>
        <item name="android:src">@drawable/illustration</item>
    </style>

    <style name="q_amount_s">
        <item name="android:hint">@string/question_amount</item>
        <item name="android:layout_marginEnd">@dimen/right_margin_q_amount</item>
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
    </style>

    <style name="q_amount_number_s">
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
        <item name="android:layout_marginEnd">@dimen/right_margin_amount_number</item>
        <item name="android:text">@string/_5</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="seekbar_main_s">
        <item name="android:layout_width">@dimen/width_seekbar</item>
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
        <item name="android:layout_marginEnd">@dimen/right_margin_seekBar</item>
    </style>

    <style name="hint_category">
        <item name="android:layout_marginStart">@dimen/left_margin_hint_category</item>
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
        <item name="android:hint">@string/category</item>
    </style>

    <style name="spinner">
        <item name="android:layout_width">@dimen/width_seekbar</item>
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
        <item name="android:layout_marginEnd">@dimen/right_margin_seekBar</item>
    </style>

    <style name="hint_diff_s">
        <item name="android:layout_marginStart">@dimen/left_margin_hint_category</item>
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
        <item name="android:hint">@string/difficulty</item>
    </style>

    <style name="btn_start_s">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:background">@drawable/start_btn_background</item>
        <item name="android:text">@string/start</item>
        <item name="android:layout_marginEnd">@dimen/m_end_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/tx_size_btn</item>
    </style>
</resources>
